<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/zgmy_tv_dingdan"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="我的订单"
        android:textColor="#929292"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/my_order_pay_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/all"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_receipt_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_comment_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/none"
            android:gravity="center"
            android:text="待使用"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_service_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_3"
            android:gravity="center"
            android:text="待评价"
            android:textColor="#929292"
            android:textSize="14sp" />
    </RadioGroup>

</LinearLayout>