<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/base320dp"
        android:layout_height="@dimen/base60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_image"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/music_image_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base10dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_"
                android:maxLength="10"

                android:maxLines="1"
                android:singleLine="true"
                android:text="歌手说"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_des"
                style="@style/text_"
                android:layout_marginTop="@dimen/base5dp"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true"
                android:text="当前热度为53.9万"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/base320dp"
        android:layout_height="@dimen/base60dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/music_image_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base10dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp">

            <TextView

                style="@style/text_"
                android:maxLength="10"

                android:maxLines="1"
                android:singleLine="true"
                android:text="歌手说"
                android:textSize="15sp" />

            <TextView

                style="@style/text_"
                android:layout_marginTop="@dimen/base5dp"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true"
                android:text="当前热度为53.9万"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/base320dp"
        android:layout_height="@dimen/base60dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/music_image_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base10dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp">

            <TextView

                style="@style/text_"
                android:maxLength="10"

                android:maxLines="1"
                android:singleLine="true"
                android:text="歌手说"
                android:textSize="15sp" />

            <TextView

                style="@style/text_"
                android:layout_marginTop="@dimen/base5dp"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true"
                android:text="当前热度为53.9万"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
