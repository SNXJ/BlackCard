<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.zsh.blackcard.ui.my.MySettedBusinessSubmitActivity">

    <RelativeLayout
        android:id="@+id/hj_eat_set_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp"
        android:background="#0C0C0C"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/blackwb_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/activity_eat_drink_set_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="提交资质"
            android:textColor="@color/recharge_text"
            android:textSize="17sp" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base60dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="自媒体头像"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />
                
                <ImageView
                    android:layout_marginRight="@dimen/base15dp"
                    android:layout_toLeftOf="@+id/id_"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_headimg"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp" />

                <ImageView
                    android:id="@+id/id_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:src="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="姓名"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:background="@null"
                    android:hint="须与身份证姓名一致"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="身份证号"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/id_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:background="@null"
                    android:hint="请输入经营者身份证号码"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="身份证照片"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/id_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:layout_toLeftOf="@+id/id_img"
                    android:background="@null"
                    android:hint="本人身份证照片"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/id_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:src="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="邮箱"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/shop_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:layout_toLeftOf="@+id/shop_phone_img"
                    android:background="@null"
                    android:hint="请输入您的联系邮箱"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_nine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="经营者手机"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/people_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:background="@null"
                    android:hint="用本人身份证办理的手机号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_ten"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                app:layout_constraintTop_toBottomOf="@+id/hj_eat_set_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="验证码"
                    android:textColor="@color/recharge_text"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/verification_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base105dp"
                    android:layout_marginRight="@dimen/base15dp"
                    android:layout_toLeftOf="@+id/verification_btn"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/recharge_text"
                    android:textColorHint="#FF454545"
                    android:textSize="15sp" />

                <Button
                    android:textColor="@color/recharge_text"
                    android:background="@null"
                    android:text="获取验证码"
                    android:id="@+id/verification_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:src="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base49dp"
        android:background="#FF0B0B0B"
        android:text="提交审核"
        android:textColor="@color/recharge_text"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
