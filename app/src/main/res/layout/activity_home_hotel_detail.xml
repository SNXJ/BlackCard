<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base225dp"
        android:background="@mipmap/hotel_image_6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/base14dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="三亚大中华希尔顿酒店"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="配备最先进的有氧运动设备"
            android:textColor="@color/title_text"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/base22dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="4.9"
            android:textColor="@color/title_text"
            android:textSize="18sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/base10dp"
    >
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/hotel_icon_1"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base13dp"
        />
    <TextView

        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:layout_marginLeft="@dimen/base38dp"
        android:textColor="@color/title_text"
        android:textSize="11sp"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/food_icon_1"
        android:layout_marginLeft="@dimen/base89dp"
        android:layout_marginRight="@dimen/base13dp"
        />
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动支付"
        android:layout_marginLeft="@dimen/base112dp"
        android:textColor="@color/title_text"
        android:textSize="11sp"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/hotel_icon_5"
        android:layout_marginLeft="@dimen/base188dp"
        />
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停车"
        android:layout_marginLeft="@dimen/base213dp"
        android:textColor="@color/title_text"
        android:textSize="11sp"
        />

</RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/base35dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0898-86868686"
    android:layout_marginLeft="@dimen/base15dp"
    android:textColor="@color/title_text"
    android:textSize="12sp"
    />
<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/hotel_icon_6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base13dp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/base35dp">
        <!--自己-->
        <Button
            android:layout_centerVertical="true"
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base20dp"
            android:background="#F29E19"
            android:layout_marginLeft="@dimen/base15dp"
            android:textColor="@color/bg_white"
            android:textSize="12sp"
            android:text="4.9"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99条评论"
            android:layout_toLeftOf="@+id/im_food_next"
            android:layout_marginRight="@dimen/base12dp"

            android:textColor="@color/title_text"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/im_food_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base13dp"
            />
    </RelativeLayout>

</LinearLayout>