<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base225dp"
        android:background="@mipmap/hotel_image_6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/base14dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="三亚大中华希尔顿酒店"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base80dp">

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="配备最先进的有氧运动设备"
            android:textColor="@color/title_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base22dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="4.9"
            android:textColor="@color/title_text"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/base10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:src="@mipmap/hotel_icon_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base3dp"
                    android:text="WIFI"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/base15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/food_icon_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/base4dp"
                    android:text="移动支付"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_swim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/base15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hotel_icon_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/base4dp"

                    android:text="游泳"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/base15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hotel_icon_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/base4dp"

                    android:text="健身"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/base15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hotel_icon_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/base4dp"

                    android:text="餐饮"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/base15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hotel_icon_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/base4dp"
                    android:text="停车"
                    android:textColor="@color/title_text"
                    android:textSize="11sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base35dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="九龙山"
            android:textColor="@color/title_text"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base13dp"
            android:src="@mipmap/hotel_icon_6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base35dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="0898-86868686"
            android:textColor="@color/title_text"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base13dp"
            android:src="@mipmap/hotel_icon_6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base35dp"
        android:gravity="center_vertical">
        <!--自己-->
        <Button
            android:id="@+id/bt_score"
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="#F29E19"
            android:text="4.9"
            android:textColor="@color/bg_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base12dp"
            android:layout_toLeftOf="@+id/im_food_next"
            android:text="99条评论"

            android:textColor="@color/title_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/im_food_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base13dp"
            android:src="@mipmap/next" />

        <View
            style="@style/line"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base65dp"
        android:layout_marginTop="@dimen/base25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base50dp"
            android:layout_marginTop="@dimen/base15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="入住"
                android:textColor="@color/ff92_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="8-8"
                android:textColor="@color/ff92_text"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base82dp"
            android:layout_marginTop="@dimen/base15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="离开"
                android:textColor="@color/ff92_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="8-9"
                android:textColor="@color/ff92_text"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_totle"
            android:layout_width="@dimen/base70dp"
            android:layout_height="@dimen/base23dp"
            android:layout_centerInParent="true"
            android:background="@drawable/addfriendshape"
            android:gravity="center"
            android:text="共一天"
            android:textColor="@color/ff92_text"
            android:textSize="15sp" />
    </RelativeLayout>
    <!--item-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base75dp"
        android:layout_marginLeft="@dimen/base15dp">

        <ImageView
            android:layout_width="@dimen/base55dp"
            android:layout_height="@dimen/base55dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/hotel_image_7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base85dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="豪华贵宾房"
            android:textColor="@color/ff92_text"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base85dp"
            android:layout_marginTop="@dimen/base47dp"
            android:text="60m   大床  1.8m"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:text="¥999"
            android:textColor="@color/ff92_text"
            android:textSize="17sp" />

        <TextView
            android:layout_width="@dimen/base10dp"
            android:layout_height="@dimen/base10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base67dp"
            android:layout_marginTop="@dimen/base48dp"
            android:background="#F29E19"
            android:gravity="center"
            android:text="订"
            android:textColor="@color/main_black"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base47dp"
            android:text="会员减99"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base75dp"
        android:layout_marginLeft="@dimen/base15dp">

        <ImageView
            android:layout_width="@dimen/base55dp"
            android:layout_height="@dimen/base55dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/hotel_image_7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base85dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="豪华贵宾房"
            android:textColor="@color/ff92_text"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base85dp"
            android:layout_marginTop="@dimen/base45dp"
            android:text="60m   大床  1.8m"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:text="¥999"
            android:textColor="@color/ff92_text"
            android:textSize="17sp" />

        <TextView
            android:layout_width="@dimen/base10dp"
            android:layout_height="@dimen/base10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base67dp"
            android:layout_marginTop="@dimen/base48dp"
            android:background="#F29E19"
            android:gravity="center"
            android:text="订"
            android:textColor="@color/main_black"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base45dp"
            android:text="会员减99"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>