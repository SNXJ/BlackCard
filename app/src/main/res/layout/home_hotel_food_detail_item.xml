<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base75dp"
    android:layout_marginLeft="@dimen/base15dp">

    <ImageView
        android:id="@+id/im_img"
        android:layout_width="@dimen/base55dp"
        android:layout_height="@dimen/base55dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/hotel_image_7" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base85dp"
        android:layout_marginTop="@dimen/base15dp"
        android:text="豪华贵宾房"
        android:textColor="@color/ff92_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base85dp"
        android:layout_marginTop="@dimen/base47dp"
        android:text="60m   大床  1.8m"
        android:textColor="@color/ff92_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp"
        android:text="¥999"
        android:textColor="@color/ff92_text"
        android:textSize="17sp" />

    <TextView
        android:layout_width="@dimen/base10dp"
        android:layout_height="@dimen/base10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base67dp"
        android:layout_marginTop="@dimen/base50dp"
        android:background="#F29E19"
        android:gravity="center"
        android:text="订"
        android:textColor="@color/main_black"
        android:textSize="8sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base47dp"
        android:text="会员减99"
        android:textColor="@color/ff92_text"
        android:textSize="11sp" />
</RelativeLayout>

