<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/vague_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base150dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/base90dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/base22dp"
                android:layout_height="@dimen/base22dp"
                android:layout_gravity="center"
                android:background="@mipmap/live_icon_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base2dp"
                android:text="黑微博"
                android:textColor="@color/live_buttom_text"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base90dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/base22dp"
                android:layout_height="@dimen/base22dp"
                android:layout_gravity="center"
                android:background="@mipmap/live_icon_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base2dp"
                android:text="小视频"
                android:textColor="@color/live_buttom_text"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/base22dp"
                android:layout_height="@dimen/base22dp"
                android:layout_gravity="center"
                android:background="@mipmap/live_icon_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base2dp"
                android:text="开播吧"
                android:textColor="@color/live_buttom_text"

                />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/base13dp"
            android:layout_height="@dimen/base13dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/base30dp"
            android:background="@mipmap/live_icon_4" />

    </RelativeLayout>
</RelativeLayout>
