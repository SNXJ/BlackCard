<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ship_image_1">

            <ImageView
                android:id="@+id/blackwb_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_marginTop="@dimen/base11dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="@dimen/base36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:text="2017年夏季诺唯真喜悦号正式首航！为您提供真正的海上头等舱体验"
            android:textColor="#929292"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base240dp"
            android:layout_marginTop="@dimen/base15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ship_image_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base45dp"
                android:layout_marginTop="@dimen/base42dp"
                android:text="海上头等舱"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base45dp"
                android:layout_marginTop="@dimen/base82dp"
                android:text="让海"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base45dp"
                android:layout_marginTop="@dimen/base120dp"
                android:text="有家的感觉"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base48dp"
                android:layout_marginTop="@dimen/base170dp"
                android:text="游艇是一种高雅而时尚的生活方式"
                android:textColor="#929292"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base240dp"
            android:layout_marginTop="@dimen/base15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ship_image_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base42dp"
                android:text="居游艇之中"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base82dp"
                android:text="居潮流之上"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base120dp"
                android:text="水相伴，心飞扬"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base170dp"
                android:text="水面上漂浮的顶级豪宅"
                android:textColor="#929292"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="豪华游艇，荣耀黑卡专供"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base15dp"
            android:text="取自世界各地的美味佳肴：专业母语服务：另您的假期更加精彩！虐为真悦号由诺唯真游轮公司设计，是以德国工艺专为中国市场打造的新型豪华游轮。"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="注意事项"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base11dp"
            android:text="1、用300元保证300万：【中国人保】为荣耀黑卡持卡人、特地推出三款豪车租赁险种。无忧出行从此开始：用均价300元保险，轻松保障三百万豪车"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="2、预订时间：持卡人需要至少提前48小时预定"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:text="3、关于定金：用户线上支付的￥2000定金，将全数抵扣 租金"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base49dp"
            android:layout_marginTop="@dimen/base94dp"
            android:background="#0B0B0B"
            android:gravity="center"
            android:text="召唤管家"
            android:textColor="#929292"
            android:textSize="17sp" />
    </LinearLayout>
</ScrollView>
