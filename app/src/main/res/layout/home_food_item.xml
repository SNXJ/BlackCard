<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Star="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_food_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base15dp"
    android:paddingRight="@dimen/base15dp"
    android:paddingTop="@dimen/base10dp">

    <ImageView
        android:id="@+id/im_food"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base175dp"
        android:src="@mipmap/food_image_1" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base15dp"
        android:text="¥399／位"
        android:textColor="@color/title_text"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:singleLine="true"
            android:text="三亚市天涯区黄山路94号"
            android:textColor="@color/title_text"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base14dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zsh.blackcard.view.Star
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                Star:starBackground="@mipmap/star_gray"
                Star:starClickable="false"
                Star:starDistance="@dimen/base3dp"
                Star:starDrawBackground="@mipmap/hotel_image_1"
                Star:starHeight="@dimen/base14dp"
                Star:starWidth="@dimen/base14dp"
                Star:starsNum="5" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="(120条评价)"
                android:textColor="#929292"
                android:textSize="11sp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>