<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp">

       <ImageView
           android:layout_marginLeft="@dimen/base15dp"
           android:layout_centerVertical="true"
           android:layout_width="@dimen/base11dp"
           android:layout_height="@dimen/base19dp"
           android:src="@mipmap/back"
           />

        <LinearLayout
            android:layout_marginRight="@dimen/base25dp"
            android:layout_marginLeft="@dimen/base50dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonshape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/home_nav_search" />

            <EditText
                android:focusable="false"
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base7dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索"
                android:singleLine="true"
                android:textColorHint="#8E8E93"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_left_rv"
        android:background="#000000"
        android:layout_width="@dimen/base100dp"
        android:layout_height="match_parent" />
<GridView
    android:layout_marginTop="@dimen/base25dp"
    android:horizontalSpacing="@dimen/base5dp"
    android:id="@+id/category_right_gv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numColumns="3"
    android:columnWidth="@dimen/base88dp"
    android:stretchMode="columnWidth"
    android:listSelector="#00000000"
    android:scrollbars="none"
        android:verticalSpacing="@dimen/base35dp"
    ></GridView>

    </LinearLayout>

</LinearLayout>
