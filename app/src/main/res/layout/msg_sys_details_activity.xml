<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="系统通知" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_data"
            style="@style/text_"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="星期五 16:00" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_data"
            android:layout_marginRight="@dimen/base30dp"
            android:paddingLeft="@dimen/base18dp">

            <ImageView
                android:layout_width="@dimen/base30dp"
                android:layout_height="@dimen/base30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/system_image_1" />

            <TextView
                style="@style/text_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base50dp"
                android:layout_marginTop="@dimen/base25dp"
                android:background="@mipmap/chat"
                android:gravity="center"
                android:padding="@dimen/base10dp"
                android:paddingLeft="@dimen/base20dp"
                android:text="@string/sys_msg_temp" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_data"
            style="@style/text_"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="星期五 16:00" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_data"
            android:layout_marginRight="@dimen/base30dp"
            android:paddingLeft="@dimen/base18dp">

            <ImageView
                android:layout_width="@dimen/base30dp"
                android:layout_height="@dimen/base30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/system_image_1" />

            <TextView
                style="@style/text_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base50dp"
                android:layout_marginTop="@dimen/base25dp"
                android:background="@mipmap/chat"
                android:gravity="center"
                android:padding="@dimen/base10dp"
                android:paddingLeft="@dimen/base20dp"
                android:text="@string/sys_msg_temp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
