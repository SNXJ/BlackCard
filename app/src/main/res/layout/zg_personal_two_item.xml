<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base20dp">

    <ImageView
        android:layout_marginTop="@dimen/base20dp"
        android:scaleType="fitXY"
        android:id="@+id/zg_personal_recycler_item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base225dp"
        app:layout_constraintTop_toBottomOf="@+id/zg_personal_recycler_item_title_tv" />

    <TextView
        android:id="@+id/zg_personal_recycler_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base20dp"
        android:gravity="center"
        android:textColor="@color/recharge_text"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:id="@+id/zg_personal_recycler_item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base20dp"
        android:gravity="center"
        android:textColor="@color/recharge_text"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/zg_personal_recycler_item_img" />

</android.support.constraint.ConstraintLayout>