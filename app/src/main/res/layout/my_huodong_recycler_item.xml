<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麦乐迪KTV嗨起来"
        android:textColor="#FF929292"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="82.5dp">

        <ImageView
            android:layout_marginRight="4dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="82.5dp"
            android:src="@mipmap/home_image_3" />

        <ImageView
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="82.5dp"
            android:src="@mipmap/home_image_1" />

        <ImageView
            android:layout_marginLeft="2dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="82.5dp"
            android:src="@mipmap/home_image_2" />

        <ImageView
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="82.5dp"
            android:src="@mipmap/home_image_4" />

    </LinearLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:textColor="#FF929292"
            android:textSize="12sp"
            android:text="开始时间：2017年10月1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:textColor="#FF929292"
            android:textSize="12sp"
            android:text="开始时间：2017年10月1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:textColor="#FF929292"
            android:textSize="12sp"
            android:text="人数：一对一"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:textColor="#FF929292"
            android:textSize="12sp"
            android:text="方式：AA互动趴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>