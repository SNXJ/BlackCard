<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="订单支付" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base110dp"
        android:layout_marginTop="@dimen/base20dp">

        <ImageView
            android:id="@+id/im_img"
            android:layout_width="@dimen/base90dp"
            android:layout_height="@dimen/base90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/hotel_image_7" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base120dp"
            android:layout_marginTop="@dimen/base13dp"
            android:text="麦乐迪（航天桥店）"
            android:textColor="@color/ff92_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base120dp"
            android:layout_marginTop="@dimen/base53dp"
            android:text="小包（2-4人）"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base120dp"
            android:layout_marginTop="@dimen/base80dp"
            android:text="10:00-13:00，共3小时"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/base30dp"
        android:text="订单金额¥999"
        android:textColor="#929292"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/base24dp"
        android:text="支付方式"
        android:textColor="#929292"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="微信支付"
            android:textColor="#929292"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_wx_pay"
            style="@style/plane_check_box"
            android:layout_width="@dimen/base18dp"
            android:layout_height="@dimen/base18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:checked="true"
            android:text=""
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />
        <!--<RadioButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:background="@drawable/paybtn_select"-->
        <!--android:button="@null"-->
        <!--android:checked="false" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/alipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="支付宝支付"
            android:textColor="#929292"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_ali_pay"
            style="@style/plane_check_box"
            android:layout_width="@dimen/base18dp"
            android:layout_height="@dimen/base18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:text=""
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_pay"
        style="@style/btn_buttom"
        android:text="立即支付" />
</LinearLayout>