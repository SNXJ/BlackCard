<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Star="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_hotel_item"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_hotel"
        android:layout_width="@dimen/base80dp"
        android:layout_height="@dimen/base80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/hotel_image_7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="如家—背景霍营地铁站店"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/base150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="昌平区回龙观镇科星西路47号"
            android:textColor="#929292"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.zsh.blackcard.view.Star
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                Star:starBackground="@mipmap/star_gray"
                Star:starClickable="false"
                Star:starDistance="@dimen/base3dp"
                Star:starDrawBackground="@mipmap/hotel_image_1"
                Star:starHeight="@dimen/base13dp"
                Star:starWidth="@dimen/base13dp"
                Star:starsNum="5" />
