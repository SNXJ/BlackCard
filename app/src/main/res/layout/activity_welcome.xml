<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"

        android:layout_height="@dimen/base430dp"
        android:layout_marginTop="@dimen/base70dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base440dp"
            android:layout_centerHorizontal="true" />

        <TextView
            style="@style/text_"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base20dp"
            android:text="荣耀黑卡" />

        <TextView
            style="@style/text_"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Honour Centurion Card" />



    </RelativeLayout>


    <Button
        android:id="@+id/welcome_register_btn"
        android:layout_width="@dimen/base120dp"
        android:layout_height="@dimen/base30dp"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/base46dp"

        android:layout_marginLeft="@dimen/base40dp"
        android:background="@drawable/shape_welcome_btn"
        android:text="在线申请"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/welcome_login_btn"
        android:layout_width="@dimen/base120dp"
        android:layout_height="@dimen/base30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="@dimen/base46dp"

        android:layout_marginRight="@dimen/base40dp"
        android:background="@drawable/shape_welcome_btn"
        android:text="会籍登录"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp" />


    <RadioGroup
        android:id="@+id/radio_group"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_banner"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/base20dp"

        android:orientation="horizontal">

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:checked="true"

            android:background="@drawable/welcoome_rb_selector"
            android:id="@+id/img_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:id="@+id/img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/welcoome_rb_selector" />

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:id="@+id/img_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/welcoome_rb_selector" />

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:id="@+id/img_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/welcoome_rb_selector" />

    </RadioGroup>

</RelativeLayout>