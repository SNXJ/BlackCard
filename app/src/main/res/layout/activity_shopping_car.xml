<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#0B0B0B"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circlebtn_select"
            android:text="全选"
            android:textSize="12sp"
            android:textColor="#929292"
            android:drawablePadding="7.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计:  ￥"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:textColor="#929292"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49200"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#929292"/>
<LinearLayout
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#141414"
    android:layout_marginLeft="57.4dp">
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#929292"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="去结算   ("/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="17sp"
            android:textColor="#929292"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="#929292"
            android:textSize="17sp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#0C0C0C">

            <ImageView
                android:id="@+id/shopping_back"
                android:layout_marginLeft="15.45dp"
                android:layout_width="11dp"
                android:layout_height="18.6dp"
                android:src="@mipmap/back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#929292"
                android:textSize="17sp"
                android:text="购物车"
                android:textStyle="bold"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <CheckBox
                android:button="@drawable/circlebtn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shopping_image_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="23dp">
                <TextView
                    android:layout_marginTop="27dp"
                    android:layout_width="156.5dp"
                    android:layout_height="wrap_content"
                    android:text="卡地亚Cartier伦敦SOLO手表 石英男表W6701005"
                    android:textSize="12sp"
                    android:textColor="#929292"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="22dp">
                <TextView
                    android:id="@+id/moneyimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#929292"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_toRightOf="@+id/moneyimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49200"
                    android:textColor="#929292"
                    android:textSize="15sp"/>

                <com.zsh.blackcard.view.AmountView
                    android:id="@+id/amount_view"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    app:btnTextSize="12sp"
                    app:tvTextSize="5dp"
                    app:btnWidth="15dp"
                    app:tvWidth="15dp"/>
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_marginTop="22dp"
                    android:layout_width="156.5dp"
                    android:layout_height="wrap_content"
                    android:text="卡地亚Cartier伦敦SOLO手表 石英男表W6701005"
                    android:textSize="12sp"
                    android:textColor="#929292"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_marginTop="22dp"
                    >
                    <TextView
                        android:id="@+id/moneyimg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#929292"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_toRightOf="@+id/moneyimg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="49200"
                        android:textColor="#929292"
                        android:textSize="15sp"/>

                    <com.zsh.blackcard.view.AmountView
                        android:id="@+id/amount_view2"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="20dp"
                        app:btnTextSize="12sp"
                        app:tvTextSize="5dp"
                        app:btnWidth="15dp"
                        app:tvWidth="15dp"
                        android:layout_marginLeft="189.5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:background="#141414"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="删除"
                android:textSize="15sp"
                android:textColor="#929292"
                android:gravity="center"/>
        </LinearLayout>
     </LinearLayout>
</RelativeLayout>
