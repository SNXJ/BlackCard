<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/recentHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="热门城市"
            android:textColor="#4c4c4c"
            android:textSize="14sp"/>

    <com.zsh.blackcard.view.selectcity.MyGridView
            android:id="@+id/recent_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_marginRight="@dimen/base30dp"
            android:layout_marginTop="@dimen/base10dp"
            android:horizontalSpacing="@dimen/base25dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:verticalSpacing="@dimen/base10dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_marginRight="@dimen/base25dp"
            android:layout_marginTop="@dimen/base15dp"
            android:background="#E2E2E2"/>

</LinearLayout>