<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#0C0C0C">

        <ImageView
            android:id="@+id/blackwb_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="黑卡额度"
            android:textColor="#929292"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/base30dp"
        android:textColor="#FF929292"
        android:layout_gravity="center_horizontal"
        android:text="最高额度（元）"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="32sp"
        android:layout_marginTop="@dimen/base30dp"
        android:textColor="#FF929292"
        android:layout_gravity="center_horizontal"
        android:text="100,000.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:textSize="17sp"
        android:textColor="#FF929292"
        android:layout_marginTop="@dimen/base45dp"
        android:background="@drawable/shape_black_surplus_btn"
        android:text="激活额度"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/base140dp"
        android:layout_height="@dimen/base35dp" />
    
</LinearLayout>