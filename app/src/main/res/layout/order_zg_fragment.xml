<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/zgmy_tv_dingdan"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="我的订单"
        android:textColor="#929292"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/my_order_pay_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_receipt_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_2"
            android:gravity="center"
            android:text="待收货"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_comment_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_3"
            android:gravity="center"
            android:text="待评价"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_service_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_4"
            android:gravity="center"
            android:text="售后"
            android:textColor="#929292"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="必备工具"
        android:textColor="#929292"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/my_order_vip_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_5"
            android:gravity="center"
            android:text="会员中心"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_collection_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_6"
            android:gravity="center"
            android:text="炫购收藏"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_address_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_7"
            android:gravity="center"
            android:text="地址管理"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_customer_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_8"
            android:gravity="center"
            android:text="客服中心"
            android:textColor="#929292"
            android:textSize="14sp" />
    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="钱包中心"
        android:textColor="#929292"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/my_order_discount_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_9"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_integral_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_10"
            android:gravity="center"
            android:text="积分"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_order_gift_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/mine1_icon_11"
            android:gravity="center"
            android:text="礼品"
            android:textColor="#929292"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null" />
    </RadioGroup>

</LinearLayout>