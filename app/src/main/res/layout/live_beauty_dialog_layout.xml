<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/live_transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/base40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base25dp"
                    android:text="白皙"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/progress_beautiful_white"
                    style="@style/sb_progress_live" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/base40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base25dp"
                    android:text="磨皮"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/progress_beautiful_skin"

                    style="@style/sb_progress_live" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/base40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base25dp"
                    android:text="大眼"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/progress_beautiful_eye"
                    style="@style/sb_progress_live" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/base40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base25dp"
                    android:text="瘦脸"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/progress_beautiful_face"
                    style="@style/sb_progress_live" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base140dp"
        android:background="@color/main_black"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base44dp">

            <TextView
                style="@style/text_"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base25dp"
                android:text="美颜"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_beautiful_default"
                style="@style/text_"
                android:layout_width="@dimen/base70dp"
                android:layout_height="@dimen/base25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base25dp"
                android:background="@drawable/round_bg_selector"
                android:gravity="center"
                android:text="恢复默认"

                android:textSize="12sp" />

        </RelativeLayout>

        <View style="@style/line" />

        <RadioGroup
            android:id="@+id/rg_beautiful"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_beautiful_01"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp"
                    android:background="@drawable/live_circle_selector"
                    android:button="@null"

                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/live_text"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_beautiful_02"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp"
                    android:background="@drawable/live_circle_selector"
                    android:button="@null"

                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/live_text"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_beautiful_03"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp"
                    android:background="@drawable/live_circle_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/live_text"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_beautiful_04"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp"
                    android:background="@drawable/live_circle_selector"
                    android:button="@null"

                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/live_text"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_beautiful_05"
                    android:layout_width="@dimen/base40dp"
                    android:layout_height="@dimen/base40dp"
                    android:background="@drawable/live_circle_selector"
                    android:button="@null"

                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/live_text"
                    android:textSize="30sp" />

            </LinearLayout>


        </RadioGroup>

    </LinearLayout>

</LinearLayout>
