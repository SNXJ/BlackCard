<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <com.zsh.blackcard.music.widget.AlbumCoverView
        android:id="@+id/album_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc_view_single"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/music_bar"
        lrc:lrcDividerHeight="10dp"
        lrc:lrcNormalTextColor="@color/bg_white"
        lrc:lrcPadding="40dp"
        lrc:lrcTextSize="16sp" />
</LinearLayout>