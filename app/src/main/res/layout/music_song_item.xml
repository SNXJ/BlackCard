<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base120dp"
    android:layout_marginLeft="@dimen/base7dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:src="@mipmap/magazine_image_72"
        android:layout_width="@dimen/base120dp"
        android:layout_height="@dimen/base110dp" />


    <TextView
        android:id="@+id/tv"
        style="@style/text_"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/base4dp"
        android:padding="@dimen/base5dp"
        android:text="聆听一首打开你心情的乡村音乐"
        />

</LinearLayout>
