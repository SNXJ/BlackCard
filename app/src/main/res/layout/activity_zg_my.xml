<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bj">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#0C0C0C">

        <ImageView
            android:id="@+id/zgmyback"
            android:layout_marginLeft="15.45dp"
            android:layout_width="11dp"
            android:layout_height="18.6dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#929292"
            android:textSize="17sp"
            android:text="我的"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0B0B0B"
        android:orientation="vertical">
    <TextView
        android:id="@+id/zgmy_tv_dingdan"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="我的订单"
        android:gravity="center_vertical"
        android:textColor="#929292"
        android:textSize="15sp"/>
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal">
        <RadioButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@mipmap/mine1_icon_1"
            android:drawablePadding="6dp"
            android:text="待付款"
            android:textSize="14sp"
            android:textColor="#929292"/>
    <RadioButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableTop="@mipmap/mine1_icon_2"
        android:drawablePadding="6dp"
        android:text="待收货"
        android:textSize="14sp"
        android:textColor="#929292"/>
    <RadioButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableTop="@mipmap/mine1_icon_3"
        android:drawablePadding="6dp"
        android:text="待评价"
        android:textSize="14sp"
        android:textColor="#929292"/>
    <RadioButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableTop="@mipmap/mine1_icon_4"
        android:drawablePadding="6dp"
        android:text="售后"
        android:textSize="14sp"
        android:textColor="#929292"/>
</RadioGroup>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="必备工具"
            android:gravity="center_vertical"
            android:textColor="#929292"
            android:textSize="15sp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_5"
                android:drawablePadding="6dp"
                android:text="会员中心"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_6"
                android:drawablePadding="6dp"
                android:text="炫购收藏"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:id="@+id/zgmy_address_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_7"
                android:drawablePadding="6dp"
                android:text="地址管理"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_8"
                android:drawablePadding="6dp"
                android:text="客服中心"
                android:textSize="14sp"
                android:textColor="#929292"/>
        </RadioGroup>


        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="钱包中心"
            android:gravity="center_vertical"
            android:textColor="#929292"
            android:textSize="15sp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/zgmy_rbt_discount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_9"
                android:drawablePadding="6dp"
                android:text="优惠券"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:id="@+id/zgmy_rbt_integral"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_10"
                android:drawablePadding="6dp"
                android:text="积分"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@mipmap/mine1_icon_11"
                android:drawablePadding="6dp"
                android:text="礼品"
                android:textSize="14sp"
                android:textColor="#929292"/>
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
