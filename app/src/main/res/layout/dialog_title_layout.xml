<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base50dp">

    <TextView
        android:id="@+id/btn_myinfo_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base21dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/dialog_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rl_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/dialog_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/btn_myinfo_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base15dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/dialog_text"
        android:textSize="15sp" />

    <View style="@style/dialog_line" />
</RelativeLayout>

