<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp"
        android:background="#0C0C0C">

        <ImageView
            android:id="@+id/blackwb_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会员中心"
            android:textColor="#929292"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base180dp"
        android:paddingLeft="@dimen/base32dp"
        android:paddingRight="@dimen/base32dp">

        <ImageView
            android:layout_width="@dimen/base310dp"
            android:layout_height="@dimen/base140dp"
            android:layout_marginTop="@dimen/base40dp"
            android:src="@mipmap/member_image_1" />

        <ImageView
            android:id="@+id/my_vip_center_head_img"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="普通会员"
            android:textColor="#FF929292"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp"
        android:text="会员尊享"
        android:textColor="#FF929292"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_vip_center_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base85dp"
        android:layout_marginTop="@dimen/base20dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>