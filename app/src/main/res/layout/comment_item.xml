<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base60dp"
        android:layout_marginLeft="@dimen/base15dp">

        <ImageView
            android:id="@+id/im_head"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/blog_image_1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base65dp"
            android:layout_marginTop="@dimen/base14dp"
            android:text="柯南也要为我哭泣"
            android:textColor="@color/ff92_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base65dp"
            android:layout_marginTop="@dimen/base34dp"
            android:text="2017-10-1"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:text="@string/comment_temp"
        android:textColor="@color/ff92_text"
        android:textSize="11sp" />

    <View
        style="@style/dialog_line"
        android:background="@color/line" />


</LinearLayout>
