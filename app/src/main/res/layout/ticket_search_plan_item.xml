<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <!--火车票Item-->
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base12dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp">

            <TextView
                style="@style/text_"
                android:layout_centerVertical="true"
                android:text="北京南"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="@dimen/base70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base68dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/text_"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/base4dp"
                    android:text="G330"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="@dimen/base70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ticket_short" />

                <TextView
                    style="@style/text_"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/base4dp"
                    android:text="4小时39分钟"
                    android:textSize="10sp" />


            </LinearLayout>


            <TextView
                style="@style/text_"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base165dp"
                android:text="上海虹桥"
                android:textSize="15sp" />

            <TextView
                style="@style/text_"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:text="¥999起"
                android:textSize="17sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_"
                android:text="06:40"
                android:textSize="10sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base150dp"
                android:text="12：39"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base10dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_"
                android:text="二等座：10张"
                android:textSize="10sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="一等座：10张9"
                android:textSize="10sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="商务座：10张"
                android:textSize="10sp" />

        </LinearLayout>

        <View style="@style/line" />

    </LinearLayout>
    <!--机票Item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base12dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp">

            <TextView
                style="@style/text_"
                android:layout_centerVertical="true"
                android:text="20:30"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base55dp"
                android:src="@mipmap/ticket_small" />

            <TextView
                style="@style/text_"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base126dp"
                android:text="22:30"
                android:textSize="15sp" />

            <TextView
                style="@style/text_"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="¥999"
                android:textSize="17sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_"
                android:text="首都T2"
                android:textSize="10sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base95dp"
                android:text="浦东T1"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base10dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_"
                android:text="海航HU7609"
                android:textSize="10sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="中型机321"
                android:textSize="10sp" />
        </LinearLayout>

        <View style="@style/line" />

    </LinearLayout>


</LinearLayout>
