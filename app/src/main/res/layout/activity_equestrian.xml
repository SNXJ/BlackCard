<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/horse_image_1">

            <ImageView
                android:id="@+id/blackwb_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_marginTop="@dimen/base11dp"
                android:src="@mipmap/back" />

        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="@dimen/base36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:text="2017年夏季诺唯真喜悦号正式首航！为您提供真正的海上头等舱体验"
            android:textColor="#929292"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base240dp"
            android:layout_marginTop="@dimen/base15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/horse_image_2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="81.5dp"
                android:text="体验"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base45dp"
                android:layout_marginTop="@dimen/base120dp"
                android:text="尊贵贵族生活"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base48dp"
                android:layout_marginTop="@dimen/base170dp"
                android:text="球场中尽情挥杆的我们，正是优厚大自然恩赐的幸运儿"
                android:textColor="#929292"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base240dp"
            android:layout_marginTop="@dimen/base15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/horse_image_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base42dp"
                android:text="依山傍水"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base82dp"
                android:text="鸟语花香"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base120dp"
                android:text="仿佛置身人间仙境"
                android:textColor="#929292"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base47dp"
                android:layout_marginTop="@dimen/base170dp"
                android:text="听不见海潮，听得见心潮"
                android:textColor="#929292"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="马术俱乐部，荣耀黑卡专供"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base15dp"
            android:text="我们以能提供您专业负责、亲切易达、连线畅通的服务为荣。提供高尔夫人士最完整的预订选择，并且永远为顾客争取最优惠的价格。"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="注意事项"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base11dp"
            android:text="1、用300元保证300万：【中国人保】为荣耀黑卡持卡人、特地推出三款豪车租赁险种。无忧出行从此开始：用均价300元保险，轻松保障三百万豪车"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:text="2、预订时间：持卡人需要至少提前48小时预定"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="@dimen/base345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:text="3、关于定金：用户线上支付的￥2000定金，将全数抵扣 租金"
            android:textColor="#929292"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base49dp"
            android:layout_marginTop="@dimen/base94dp"
            android:background="#0B0B0B"
            android:gravity="center"
            android:text="召唤管家"
            android:textColor="#929292"
            android:textSize="17sp" />
    </LinearLayout>
</ScrollView>
