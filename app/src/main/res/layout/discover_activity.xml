<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="发现" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/base35dp"
        android:orientation="horizontal">

        <!--android:background="@drawable/button_underlin"-->

        <RadioButton
            android:id="@+id/discover_one_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="精选"
            android:textColor="@color/hometext"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/discover_two_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="数码"
            android:textColor="@color/hometext"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/discover_three_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="亲子"
            android:textColor="@color/hometext"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/discover_four_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="时尚"
            android:textColor="@color/hometext"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/discover_five_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="美食"
            android:textColor="@color/hometext"
            android:textSize="15sp" />
    </RadioGroup>

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/discover_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base200dp">

    </cn.jzvd.JZVideoPlayerStandard>

</LinearLayout>
