<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <RelativeLayout style="@style/title_rl">

            <ImageView
                android:id="@+id/title_back"
                style="@style/title_im_back" />

            <TextView
                android:id="@+id/title_tv"
                style="@style/title_tv"
                android:text="头条" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:src="@mipmap/head_icon_2" />

        </RelativeLayout>

        <TextView
            android:id="@+id/home_top_news_detail_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/home_top_news_detail_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base200dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/home_top_news_detail_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_top_news_detail_small_title_one_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_top_news_detail_small_content_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/home_top_news_detail_small_one_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base200dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/home_top_news_detail_small_title_two_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_top_news_detail_small_content_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/home_top_news_detail_small_two_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base200dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/home_top_news_detail_small_title_three_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_top_news_detail_small_content_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/recharge_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/home_top_news_detail_small_three_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base200dp"
            android:layout_marginBottom="@dimen/base15dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:scaleType="fitXY" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>