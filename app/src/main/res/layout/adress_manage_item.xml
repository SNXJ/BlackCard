<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base125dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_name"
        style="@style/text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base18dp"
        android:gravity="center_vertical"
        android:text="王晶"
        android:textSize="14sp"></TextView>


    <TextView
        android:id="@+id/tv_tel"
        style="@style/text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base8dp"
        android:layout_marginTop="@dimen/base18dp"
        android:text="18888888888"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_address"
        style="@style/text_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base15dp"
        android:text="北京市朝阳区西大望路甲23号soho现代城"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/base15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/takecircle_select"
            android:drawablePadding="@dimen/base5dp"
            android:text="设为默认"
            android:textColor="#929292"
            android:textSize="11sp" />


        <RadioButton
            android:id="@+id/rb_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base74dp"
            android:button="@null"
            android:drawableLeft="@mipmap/address_icon_1"
            android:drawablePadding="@dimen/base4dp"
            android:text="编辑"
            android:textColor="#929292"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/base14dp"
            android:button="@null"
            android:drawableLeft="@mipmap/address_icon_2"
            android:drawablePadding="@dimen/base4dp"
            android:text="删除"
            android:textColor="#929292"
            android:textSize="11sp" />


    </RelativeLayout>

    <View style="@style/line"></View>
</RelativeLayout>
