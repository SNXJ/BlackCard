<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/home_nav_more"
            android:gravity="center"
            android:text="三亚"
            android:textColor="#929292"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonshape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/home_nav_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7.65dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索"
                android:singleLine="true"
                android:textColorHint="#8E8E93"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/hotel_btn_1"
            android:gravity="center"
            android:text="排序"
            android:textColor="#929292"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/hotel_btn_1"
            android:text="品牌"
            android:textColor="#929292"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25.25dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/hotel_btn_1"
            android:text="筛选"
            android:textColor="#929292"
            android:textSize="15sp" />
    </RelativeLayout>

    <include
        layout="@layout/hotel_sort_fragment"
        android:visibility="gone"></include>


</LinearLayout>