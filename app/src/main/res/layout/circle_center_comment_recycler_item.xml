<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/base15dp"
    android:paddingTop="@dimen/base10dp"
    android:paddingBottom="@dimen/base10dp"
    android:paddingRight="@dimen/base15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/circle_center_comment_item_head_img"
        android:layout_width="@dimen/base40dp"
        android:layout_height="@dimen/base40dp" />

    <TextView
        android:singleLine="true"
        android:maxWidth="@dimen/base50dp"
        android:textColor="@color/recharge_text"
        android:id="@+id/circle_center_comment_item_name_tv"
        android:layout_marginTop="@dimen/base3dp"
        android:layout_marginLeft="@dimen/base10dp"
        android:textSize="12sp"
        android:layout_alignTop="@+id/circle_center_comment_item_head_img"
        android:layout_toRightOf="@+id/circle_center_comment_item_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/recharge_text"
        android:id="@+id/circle_center_comment_item_time_tv"
        android:layout_marginBottom="@dimen/base3dp"
        android:layout_marginLeft="@dimen/base10dp"
        android:textSize="11sp"
        android:text="2017-01-01"
        android:layout_alignBottom="@+id/circle_center_comment_item_head_img"
        android:layout_toRightOf="@+id/circle_center_comment_item_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/circle_center_comment_reply_tv"
        android:textColor="@color/recharge_text"
        android:layout_marginBottom="@dimen/base3dp"
        android:layout_marginLeft="@dimen/base5dp"
        android:textSize="11sp"
        android:text="回复"
        android:layout_alignBottom="@+id/circle_center_comment_item_head_img"
        android:layout_toRightOf="@+id/circle_center_comment_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/recharge_text"
        android:gravity="center"
        android:layout_alignBottom="@+id/circle_center_comment_item_down_img"
        android:layout_alignTop="@+id/circle_center_comment_item_down_img"
        android:id="@+id/circle_center_comment_item_down_number_tv"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:layout_marginRight="@dimen/base3dp"
        android:id="@+id/circle_center_comment_item_down_img"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/circle_center_comment_item_down_number_tv"
        android:src="@mipmap/comment_icon_down"
        android:layout_width="@dimen/base22dp"
        android:layout_height="@dimen/base22dp" />

    <TextView
        android:textColor="@color/recharge_text"
        android:layout_marginRight="@dimen/base5dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/circle_center_comment_item_down_img"
        android:layout_alignBottom="@+id/circle_center_comment_item_down_img"
        android:layout_alignTop="@+id/circle_center_comment_item_down_img"
        android:id="@+id/circle_center_comment_item_up_number_tv"
        android:textSize="14sp"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="@dimen/base3dp"
        android:id="@+id/circle_center_comment_item_up_img"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/circle_center_comment_item_up_number_tv"
        android:src="@mipmap/comment_icon_up"
        android:layout_width="@dimen/base22dp"
        android:layout_height="@dimen/base22dp" />

    <TextView
        android:textColor="@color/recharge_text"
        android:layout_marginTop="@dimen/base15dp"
        android:layout_below="@+id/circle_center_comment_item_head_img"
        android:id="@+id/circle_center_comment_item_content_tv"
        android:layout_width="match_parent"
        android:textSize="11sp"
        android:layout_height="wrap_content" />

</RelativeLayout>