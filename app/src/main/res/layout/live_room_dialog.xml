<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center">
    <!-- 183 135-->
    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/base260dp"
        android:layout_height="@dimen/base318dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/live_room_dialog_bg">

        <ImageView
            android:id="@+id/im_bg"
            android:layout_width="@dimen/base260dp"
            android:layout_height="@dimen/base318dp"
            android:background="@drawable/live_room_dialog_bg"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="@dimen/base260dp"
            android:layout_height="@dimen/base135dp"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:background="#ccffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/base76dp"
                android:layout_marginLeft="@dimen/base42dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:textColor="@color/ff2a_text"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base7dp"
                    android:text="关注"
                    android:textColor="@color/ff2a_text"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/base76dp"
                android:layout_marginLeft="@dimen/base42dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="@color/ff2a_text"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base7dp"
                    android:text="粉丝"
                    android:textColor="@color/ff2a_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/base76dp"
                android:layout_marginRight="@dimen/base42dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textColor="@color/ff2a_text"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base7dp"
                    android:text="动态"
                    android:textColor="@color/ff2a_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dialog_go"
                android:layout_width="@dimen/base100dp"
                android:layout_height="@dimen/base32dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/base20dp"
                android:background="@drawable/org_btn_selector"
                android:gravity="center">

                <ImageView
                    android:id="@+id/im_follow_status"
                    android:layout_width="@dimen/base20dp"
                    android:layout_height="@dimen/base20dp"
                    android:src="@mipmap/room_btn_1" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
