<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/base10dp"
    android:paddingBottom="@dimen/base10dp">

    <ImageView
        android:id="@+id/category_right_head_img"
        android:layout_width="@dimen/base35dp"
        android:layout_height="@dimen/base35dp" />

    <TextView
        android:id="@+id/category_right_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/category_right_head_img"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/category_right_head_img"
        android:textColor="@color/recharge_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/category_right_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_right_head_img"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/category_right_head_img"
        android:textColor="@color/recharge_text"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/base15dp"
        android:layout_below="@+id/category_right_head_img"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base55dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/shop_image_101"
            android:id="@+id/category_right_one_img"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/base55dp" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/base5dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:src="@mipmap/shop_image_102"
            android:id="@+id/category_right_two_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/base55dp" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_marginRight="@dimen/base10dp"
            android:src="@mipmap/shop_image_103"
            android:id="@+id/category_right_three_img"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/base55dp" />

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/shop_image_104"
            android:id="@+id/category_right_four_img"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/base55dp" />

    </LinearLayout>

</RelativeLayout>
