<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="头条" />

        <TextView
            android:id="@+id/my_tip_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/recharge_text"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--4个padding解决文字无法平分大小问题-->
        <android.support.design.widget.TabLayout
            android:id="@+id/my_order_other_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base35dp"
            android:layout_marginRight="@dimen/base15dp"
            android:background="#101010"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabPaddingBottom="-1dp"
            app:tabPaddingEnd="-1dp"
            app:tabPaddingStart="-1dp"
            app:tabPaddingTop="-1dp"
            app:tabSelectedTextColor="@color/bg_org"
            app:tabTextColor="@color/recharge_text" />

        <ImageView
            android:id="@+id/im_more_channel"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_small" />


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/discover_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

    </FrameLayout>

</LinearLayout>
