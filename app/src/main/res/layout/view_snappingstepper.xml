<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivStepperMinus"
        android:layout_width="@dimen/base20dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_snappingstepper_minus" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-5dp"
        android:layout_toLeftOf="@id/ivStepperPlus"
        android:layout_toRightOf="@id/ivStepperMinus"
        android:layout_weight="1"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentTop="true"
            android:background="@color/ff92_text" />

        <TextView
            android:id="@+id/tvStepperContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:textColor="@color/ff92_text"
            android:textSize="12sp"
            tools:text="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ff92_text" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivStepperPlus"
        android:layout_width="@dimen/base20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-5dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_snappingstepper_plus" />
    <!--android:background="@drawable/sl_snappingstepper_button"-->


    <!--android:background="@drawable/stepper_selector"-->
</LinearLayout>