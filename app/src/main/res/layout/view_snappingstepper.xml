<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivStepperMinus"
        android:layout_width="@dimen/base30dp"
        android:layout_height="match_parent"
        android:background="@drawable/sl_snappingstepper_button"
        android:clickable="true"
        android:padding="@dimen/base10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_snappingstepper_minus" />

    <ImageView
        android:id="@+id/ivStepperPlus"
        android:layout_width="@dimen/base30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/sl_snappingstepper_button"
        android:clickable="true"
        android:padding="@dimen/base10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_snappingstepper_plus" />

    <TextView
        android:id="@+id/tvStepperContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivStepperPlus"
        android:layout_toRightOf="@id/ivStepperMinus"
        android:background="@color/bg_white"
        android:gravity="center"
        android:textColor="@color/ff92_text"
        android:textSize="14sp"
        tools:text="1" />


</RelativeLayout>