<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp"
        android:background="#0C0C0C">

        <ImageView
            android:id="@+id/zgmyback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base15dp"
            android:scaleType="center"
            android:src="@mipmap/back" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/login_icon_img"
        android:layout_width="@dimen/base90dp"
        android:layout_height="@dimen/base83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base129dp"
        android:scaleType="fitXY"
        android:src="@mipmap/lognin_icon" />

    <EditText
        android:id="@+id/login_user_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp"
        android:layout_below="@+id/login_icon_img"
        android:layout_marginTop="@dimen/base55dp"
        android:background="@null"
        android:hint="请输入您的黑卡卡号"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp"
        android:textColor="@color/recharge_text"
        android:textColorHint="#FF454545"
        android:textSize="14sp" />

    <View
        android:id="@+id/login_user_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/login_user_et"
        android:background="@color/divider"
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/login_pass_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp"
        android:layout_below="@+id/login_user_v"
        android:layout_marginTop="@dimen/base5dp"
        android:background="@null"
        android:hint="请输入您的密码"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp"
        android:textColor="@color/recharge_text"
        android:textColorHint="#FF454545"
        android:textSize="14sp" />

    <View
        android:id="@+id/login_pass_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/login_pass_et"
        android:background="@color/divider"
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp" />

    <Button
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp"
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp"
        android:layout_below="@+id/login_pass_v"
        android:layout_marginTop="@dimen/base70dp"
        android:background="@drawable/shape_login_btn"
        android:text="登录"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp"
        android:id="@+id/login_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="@dimen/base15dp"
        android:text="在线申请"
        android:textColor="#FF929292" />

    <TextView
        android:layout_marginLeft="@dimen/base30dp"
        android:layout_marginRight="@dimen/base30dp"
        android:id="@+id/login_forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="@dimen/base15dp"
        android:text="忘记密码"
        android:textColor="#FF929292" />

</RelativeLayout>
