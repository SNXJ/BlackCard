<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/login_icon_img"
        android:layout_marginTop="129dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lognin_icon"
        android:layout_width="90dp"
        android:layout_height="83dp" />

    <EditText
        android:maxLines="1"
        android:textColor="@color/recharge_text"
        android:layout_marginTop="55dp"
        android:id="@+id/login_user_et"
        android:background="@null"
        android:textSize="14sp"
        android:textColorHint="#FF454545"
        android:layout_below="@+id/login_icon_img"
        android:hint="请输入您的黑卡卡号"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="@dimen/base40dp" />

    <View
        android:id="@+id/login_user_v"
        android:layout_below="@+id/login_user_et"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:layout_marginTop="@dimen/base5dp"
        android:maxLines="1"
        android:digits="123456asd"
        android:textColor="@color/recharge_text"
        android:id="@+id/login_pass_et"
        android:background="@null"
        android:textSize="14sp"
        android:textColorHint="#FF454545"
        android:layout_below="@+id/login_user_v"
        android:hint="请输入您的密码"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp" />

    <View
        android:id="@+id/login_pass_v"
        android:layout_below="@+id/login_pass_et"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
    <Button
        android:background="@drawable/shape_login_btn"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/login_pass_v"
        android:textColor="#FFFFFFFF"
        android:id="@+id/login_btn"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/login_register_tv"
        android:layout_marginTop="15dp"
        android:textColor="#FF929292"
        android:layout_below="@+id/login_btn"
        android:text="在线申请"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_forget_tv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textColor="#FF929292"
        android:layout_below="@+id/login_btn"
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
