<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_alpha"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base31dp"
        android:layout_marginRight="@dimen/base25dp"
        android:background="#1A1A1A"
        android:clickable="false"
        android:enabled="false">

        <TextView
            android:id="@+id/alpha"
            style="@style/text_"
            android:layout_width="@dimen/base55dp"
            android:layout_height="@dimen/base31dp"
            android:layout_marginLeft="@dimen/base12dp"
            android:clickable="false"
            android:enabled="false"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>


    <!--  <View
         android:id="@+id/line"
         android:layout_width="match_parent"
         android:layout_height="@dimen/base1dp"
         android:layout_marginLeft="@dimen/base10dp"
         android:layout_marginRight="@dimen/base25dp"
         android:background="#E2E2E2"
         android:visibility="visible" /> -->

    <TextView
        android:id="@+id/name"
        style="@style/text_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp"
        android:padding="@dimen/base12dp"
        android:textSize="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_marginRight="@dimen/base25dp"
        android:background="@color/line" />

</LinearLayout>