<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base43dp"
            android:background="@color/main_black"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RadioButton
                android:id="@+id/rb_hj_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:button="@null"
                android:drawablePadding="@dimen/base4dp"
                android:drawableRight="@mipmap/home_nav_more"
                android:gravity="center"
                android:text="三亚"
                android:textColor="#929292"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/hj_linear_search"
                android:layout_width="@dimen/base230dp"
                android:layout_height="@dimen/base28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonshape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/base16dp"
                    android:src="@mipmap/home_nav_search" />

                <TextView
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/base8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="搜索"
                    android:textColor="@color/recharge_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hj_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>