<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/head_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/blog_image_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="忘记时间的钟"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/circle_center_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base6dp"
                android:text="昨天16:36"
                android:textColor="@color/recharge_text"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/circle_center_item_title"
        android:layout_below="@+id/head_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base18dp"
        android:text="#跑车世界# 一枚宽体战神GTR"
        android:textColor="@color/recharge_text"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_marginBottom="@dimen/base10dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_below="@+id/circle_center_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_center_item_yeah_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base20dp"
            android:src="@mipmap/blog_icon_1" />

        <TextView
            android:id="@+id/circle_center_item_yeah_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base3dp"
            android:gravity="center"
            android:textColor="@color/recharge_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/circle_center_item_comment_img"
            android:layout_width="@dimen/base22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base40dp"
            android:src="@mipmap/blog_icon_2" />

        <TextView
            android:id="@+id/circle_center_item_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base3dp"
            android:gravity="center"
            android:textColor="@color/recharge_text"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>