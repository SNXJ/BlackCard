<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    tools:context=".ui.home.HomePublicDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/home_public_detail_one_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base225dp" />

        <TextView
            android:textColor="@color/recharge_text"
            android:id="@+id/home_public_detail_introduce_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_public_detail_one_img"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:textSize="12sp" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/home_public_detail_two_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base225dp"
            android:layout_below="@+id/home_public_detail_introduce_tv"
            android:layout_marginTop="@dimen/base20dp" />

        <ImageView
            android:layout_marginTop="@dimen/base20dp"
            android:scaleType="fitXY"
            android:id="@+id/home_public_detail_three_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base225dp"
            android:layout_below="@+id/home_public_detail_two_img" />

        <TextView
            android:textColor="@color/recharge_text"
            android:id="@+id/home_public_detail_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_public_detail_three_img"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:textColor="@color/recharge_text"
            android:id="@+id/home_public_detail_title_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_public_detail_title_tv"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:textSize="12sp" />

        <TextView
            android:textColor="@color/recharge_text"
            android:id="@+id/home_public_detail_care_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_public_detail_title_content_tv"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:textColor="@color/recharge_text"
            android:id="@+id/home_public_detail_care_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_public_detail_care_tv"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base20dp"
            android:textSize="12sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/base49dp"
            android:layout_below="@+id/home_public_detail_care_content_tv"
            android:layout_marginTop="@dimen/base20dp"
            android:background="#141414"
            android:text="召唤管家"
            android:textColor="@color/recharge_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base44dp"
            android:layout_alignParentTop="true"
            android:background="@color/transparent">

            <ImageView
                android:id="@+id/title_back"
                style="@style/title_im_back" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
