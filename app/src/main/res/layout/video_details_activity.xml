<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_stickynavlayout_topview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base230dp"
            android:background="@mipmap/play_image_1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_marginTop="@dimen/base15dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base10dp">

                <TextView
                    style="@style/text_"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="17.3w播放"
                    android:textSize="11sp" />

                <TextView
                    style="@style/text_"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:text="4小时前"
                    android:textSize="11sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/base20dp"
                    android:layout_height="@dimen/base20dp"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:src="@mipmap/play_icon_1" />

                <TextView
                    style="@style/text_"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="姜小白：......"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/base20dp"
                    android:layout_height="@dimen/base20dp"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:src="@mipmap/play_icon_2" />

                <TextView
                    style="@style/text_"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="400喜欢"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/base20dp"
                    android:layout_height="@dimen/base20dp"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:src="@mipmap/play_icon_3" />

                <TextView
                    style="@style/text_"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:text="89评论"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginTop="@dimen/base10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base60dp">

            <ImageView
                android:layout_width="@dimen/base40dp"
                android:layout_height="@dimen/base40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:src="@mipmap/blog_image_1" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base65dp"
                android:layout_marginTop="@dimen/base14dp"
                android:text="爱跳舞的小丑"
                android:textSize="14sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base65dp"
                android:layout_marginTop="@dimen/base35dp"
                android:text="6666"
                android:textSize="11sp" />

            <TextView
                style="@style/text_"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base15dp"
                android:layout_marginTop="@dimen/base14dp"
                android:text="9分钟前"
                android:textSize="11sp" />

            <View style="@style/line" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base60dp">

            <ImageView
                android:layout_width="@dimen/base40dp"
                android:layout_height="@dimen/base40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:src="@mipmap/blog_image_1" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base65dp"
                android:layout_marginTop="@dimen/base14dp"
                android:text="假面骑士"
                android:textSize="14sp" />

            <TextView
                style="@style/text_"
                android:layout_marginLeft="@dimen/base65dp"
                android:layout_marginTop="@dimen/base35dp"
                android:text="6666"
                android:textSize="11sp" />

            <TextView
                style="@style/text_"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base15dp"
                android:layout_marginTop="@dimen/base14dp"
                android:text="9分钟前"
                android:textSize="11sp" />

            <View style="@style/line" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ff0c_bg">

        <ImageView
            android:layout_width="@dimen/base35dp"
            android:layout_height="@dimen/base35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base21dp"
            android:src="@mipmap/room_icon_2" />

        <ImageView

            android:layout_width="@dimen/base35dp"
            android:layout_height="@dimen/base35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base95dp"
            android:src="@mipmap/room_icon_3" />

        <ImageView
            android:layout_width="@dimen/base35dp"
            android:layout_height="@dimen/base35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base55dp"
            android:src="@mipmap/room_icon_4" />

        <ImageView
            android:layout_width="@dimen/base35dp"
            android:layout_height="@dimen/base35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:src="@mipmap/room_icon_5" />
    </RelativeLayout>


</RelativeLayout>
