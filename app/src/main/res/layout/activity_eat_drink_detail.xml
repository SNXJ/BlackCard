<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#0C0C0C">

            <ImageView
                android:id="@+id/blackwb_back"
                android:layout_width="11dp"
                android:layout_height="18.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.45dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/eat_drink_detail_title_tv"
                android:drawablePadding="@dimen/base5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="吃喝玩乐"
                android:textColor="@color/recharge_text"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base59dp">

            <ImageView
                android:id="@+id/hj_child_recycler_head_img"
                android:layout_width="@dimen/base40dp"
                android:layout_height="@dimen/base40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/blog_image_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base10dp"
                android:layout_toRightOf="@+id/hj_child_recycler_head_img"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/togetherselect"
                    android:text="完成全部任务"
                    android:textColor="@color/recharge_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base6dp"
                    android:text="1.7km 19岁魔蝎座"
                    android:textColor="@color/recharge_text"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:background="@drawable/shape_hj_child_item_add_friend"
                android:gravity="center"
                android:paddingBottom="@dimen/base1dp"
                android:paddingLeft="@dimen/base7dp"
                android:paddingRight="@dimen/base7dp"
                android:paddingTop="@dimen/base1dp"
                android:text="加好友"
                android:textColor="@color/recharge_text"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_startTime_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="开始时间"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_startTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_endTime_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_startTime_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="结束时间"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_endTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_price_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_endTime_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="期望价格"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_type_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_price_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="方式"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_people_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_type_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="人数要求"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_people_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_sex_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_people_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="性别要求"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_year_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_below="@+id/hj_eat_set_sex_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:text="年龄要求"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base15dp"
                android:textColor="@color/recharge_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hj_eat_set_detail_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hj_eat_set_year_relative">

            <TextView
                android:id="@+id/hj_eat_detail_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_marginTop="@dimen/base13dp"
                android:text="详细要求"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hj_eat_detail_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base15dp"
                android:layout_marginTop="@dimen/base10dp"
                android:textColor="@color/recharge_text"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/hj_eat_detail_release_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base49dp"
        android:layout_alignParentBottom="true"
        android:background="#0C0C0C"
        android:gravity="center"
        android:text="约TA"
        android:textColor="@color/recharge_text"
        android:textSize="17sp" />
</RelativeLayout>
