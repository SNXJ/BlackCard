<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tab_item"
    android:layout_width="@dimen/base70dp"
    android:layout_height="@dimen/base60dp"
    android:background="@color/main_black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tab_text_1"
        style="@style/text_"
        android:layout_marginTop="@dimen/base10dp"
        android:enabled="false"
        android:gravity="center"
        android:text="今天"
        android:textColor="@drawable/tk_tab_item_select"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tab_text_2"
        style="@style/text_"
        android:layout_marginTop="@dimen/base8dp"
        android:enabled="false"
        android:gravity="center"
        android:text="11-11"
        android:textColor="@drawable/tk_tab_item_select"
        android:textSize="12sp" />
</LinearLayout>


