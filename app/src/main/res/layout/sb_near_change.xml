<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/base15dp">

    <TextView
        android:id="@+id/sb_near_change_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base35dp"
        android:layout_marginTop="@dimen/base15dp"
        android:text="取消"
        android:textColor="#FF333333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sb_near_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base15dp"
        android:text="筛选"
        android:textColor="#FF333333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sb_near_change_sure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base35dp"
        android:layout_marginTop="@dimen/base15dp"
        android:text="确定"
        android:textColor="#FF333333"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/base50dp"
        android:background="@color/recharge_text"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_near_change_cancel_tv"
        android:layout_marginTop="@dimen/base15dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <RadioButton
            android:id="@+id/black_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="黑微博"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/open_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="开播呗"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/small_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="小视频"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

    </RadioGroup>


    <TextView
        android:id="@+id/sb_near_change_sex_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_near_change_cancel_tv"
        android:layout_marginTop="@dimen/base30dp"
        android:text="性别："
        android:textColor="@color/recharge_text"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/base30dp"
        app:layout_constraintLeft_toLeftOf="@+id/radio_group"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <RadioGroup
        android:id="@+id/radio_group_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_sex_tv"
        app:layout_constraintLeft_toRightOf="@+id/sb_near_change_sex_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_sex_tv">

        <RadioButton
            android:id="@+id/all_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/man_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/women_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/hometext"
            android:textSize="14sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/sb_near_change_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_near_change_cancel_tv"
        android:layout_marginTop="@dimen/base30dp"
        android:text="活跃时间："
        android:textColor="@color/recharge_text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/sb_near_change_sex_tv"
        app:layout_constraintRight_toRightOf="@+id/sb_near_change_sex_tv"
        app:layout_constraintTop_toBottomOf="@+id/sb_near_change_sex_tv" />

    <TextView
        android:id="@+id/sb_near_line_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/base2dp"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:background="#FFD8D8D8"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/sb_near_change_time_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <ImageView
        android:id="@+id/one_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base20dp"
        android:src="@drawable/sb_near_false"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/sb_near_change_time_tv"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <ImageView
        android:id="@+id/two_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base20dp"
        android:src="@drawable/sb_near_false"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/one_img"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <ImageView
        android:id="@+id/three_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base37dp"
        android:src="@drawable/sb_near_false"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/two_img"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <ImageView
        android:id="@+id/four_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base40dp"
        android:src="@drawable/sb_near_false"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/three_img"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <ImageView
        android:id="@+id/five_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base40dp"
        android:layout_marginRight="@dimen/base20dp"
        android:src="@drawable/sb_near_false"
        app:layout_constraintBottom_toBottomOf="@+id/sb_near_change_time_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sb_near_change_time_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/recharge_text"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/one_img"
        app:layout_constraintRight_toRightOf="@+id/one_img"
        app:layout_constraintTop_toBottomOf="@+id/one_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15分钟内"
        android:textColor="@color/recharge_text"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/two_img"
        app:layout_constraintRight_toRightOf="@+id/two_img"
        app:layout_constraintTop_toBottomOf="@+id/two_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2小时内"
        android:textColor="@color/recharge_text"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/three_img"
        app:layout_constraintRight_toRightOf="@+id/three_img"
        app:layout_constraintTop_toBottomOf="@+id/three_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1天内"
        android:textColor="@color/recharge_text"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/four_img"
        app:layout_constraintRight_toRightOf="@+id/four_img"
        app:layout_constraintTop_toBottomOf="@+id/four_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7天内"
        android:textColor="@color/recharge_text"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/five_img"
        app:layout_constraintRight_toRightOf="@+id/five_img"
        app:layout_constraintTop_toBottomOf="@+id/five_img" />

</android.support.constraint.ConstraintLayout>