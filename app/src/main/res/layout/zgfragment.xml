<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#0C0C0C"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zg_myleftimg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base20dp"
                android:src="@mipmap/buy_nav_mine" />

            <LinearLayout
                android:id="@+id/zg_title_search_linear"
                android:layout_width="230dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonshape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/home_nav_search" />

                <TextView
                    android:id="@+id/zg_title_search_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.65dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索"
                    android:textColorHint="#8E8E93"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/buy_nav_sacn" />
        </RelativeLayout>

        <com.youth.banner.Banner
            android:id="@+id/zg_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base175dp"
            app:image_scale_type="center_crop"
            app:indicator_drawable_selected="@mipmap/circle_true"
            app:indicator_drawable_unselected="@mipmap/circle_false"
            app:indicator_height="@dimen/base20dp"
            app:indicator_margin="0dp"
            app:indicator_width="@dimen/base20dp">

        </com.youth.banner.Banner>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/zg_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>