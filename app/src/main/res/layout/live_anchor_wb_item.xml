<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp">

        <ImageView
            android:id="@+id/im_head"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@mipmap/blog_image_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base40dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="忘记时间的钟"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base6dp"
                android:text="昨天16:36"
                android:textColor="#929292"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base17dp"
        android:text="#跑车世界# 一枚宽体战神GTR"
        android:textColor="#929292"
        android:textSize="12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:horizontalSpacing="@dimen/base8dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/base8dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base22dp"
        android:layout_marginTop="@dimen/base12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_dotAgree"
            android:layout_width="@dimen/base22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base40dp"
            android:src="@mipmap/blog_icon_1" />

        <TextView
            android:id="@+id/tv_agreeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base3dp"
            android:text="18"
            android:textColor="#929292"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base78dp"
            android:src="@mipmap/blog_icon_2" />

        <TextView
            android:id="@+id/tv_commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base3dp"
            android:text="56"
            android:textColor="#929292"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/base22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base77dp"
            android:src="@mipmap/blog_icon_3" />

        <TextView
            android:id="@+id/tv_gifts_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base3dp"
            android:text="56"
            android:textColor="#929292"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
