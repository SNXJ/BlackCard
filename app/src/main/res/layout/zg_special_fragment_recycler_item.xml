<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base5dp"
    android:paddingLeft="@dimen/base3dp"
    android:paddingRight="@dimen/base3dp"
    android:paddingTop="@dimen/base10dp">

    <ImageView
        android:id="@+id/zg_special_fragment_recycler_item_big_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/cabinet_image_2" />

    <TextView
        android:id="@+id/zg_special_fragment_recycler_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp"
        android:text="三亚新光天地店"
        android:textColor="@color/recharge_text"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/zg_special_fragment_recycler_item_big_img" />


</android.support.constraint.ConstraintLayout>