<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/im_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="发表评价" />

        <TextView
            android:id="@+id/tv_submmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base20dp"
            android:text="发布"
            android:textColor="@color/ff92_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base80dp">

        <com.zsh.blackcard.view.Star
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_toRightOf="@+id/tv_score"
            Star:starBackground="@mipmap/star_gray"
            Star:starClickable="true"
            Star:starDistance="@dimen/base5dp"
            Star:starDrawBackground="@mipmap/hotel_image_1"
            Star:starHeight="@dimen/base25dp"
            Star:starWidth="@dimen/base25dp"
            Star:starsNum="5" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base4dp"
            android:text="给店家评分"
            android:textColor="@color/ff92_text"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base178dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base38dp"
        android:background="#FF181818"
        android:gravity="top"
        android:padding="@dimen/base10dp">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF181818"
            android:gravity="top"
            android:hint="请输入内容"
            android:maxLength="100"
            android:maxLines="5"
            android:textColor="@color/ff92_text"
            android:textColorHint="@color/ff92_text"
            android:textSize="15sp" />


    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/takecircle_select"
            android:drawablePadding="@dimen/base5dp"
            android:text="匿名评价"
            android:textColor="#929292"
            android:textSize="11sp" />


    </RadioGroup>


</LinearLayout>
