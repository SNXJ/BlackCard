<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/live_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base60dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/beauty"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/beauty_selector"
            android:clickable="true" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/music_live" />

        <ImageView
            android:id="@+id/flash"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/flash_selector"
            android:clickable="true" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/camera_id" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base60dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/beauty_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/music_live" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/flash_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/camera_id" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base60dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/beauty_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/music_live" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/flash_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/camera_id" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base60dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/beauty_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/music_live" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:layout_marginRight="@dimen/base40dp"
            android:background="@drawable/flash_selector"
            android:clickable="true" />

        <ImageView

            android:layout_width="@dimen/base40dp"
            android:layout_height="@dimen/base40dp"
            android:clickable="true"
            android:src="@mipmap/camera_id" />
    </LinearLayout>


</LinearLayout>
