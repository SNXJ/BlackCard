<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_rl">

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_im_back" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_tv"
            android:text="系统通知" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sys_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base59dp">

        <ImageView
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base20dp"
            android:src="@mipmap/system_image_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base60dp"
            android:text="隐形者官方帐号"
            android:textColor="@color/ff92_text"
            android:textSize="14sp" />

        <View style="@style/line" />
    </RelativeLayout>

</LinearLayout>
