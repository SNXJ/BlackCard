<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Star="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_hotel_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base75dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_img"
        android:layout_width="@dimen/base55dp"
        android:layout_height="@dimen/base55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/hotel_image_7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base10dp"
            android:text="豆捞坊（胜利店）"
            android:textColor="#929292"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/base150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base5dp"
            android:singleLine="true"
            android:text="昌平区回龙观镇科星西路47号"
            android:textColor="#929292"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base15dp"
            android:layout_marginTop="@dimen/base5dp"
            android:orientation="horizontal">

            <com.zsh.blackcard.view.Star
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                Star:starBackground="@mipmap/star_gray"
                Star:starClickable="false"
                Star:starDistance="@dimen/base3dp"
                Star:starDrawBackground="@mipmap/hotel_image_1"
                Star:starHeight="@dimen/base13dp"
                Star:starWidth="@dimen/base13dp"
                Star:starsNum="5" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base5dp"
                android:text="(120条评价)"
                android:textColor="#929292"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base25dp"
            android:text="23公里"
            android:textColor="#929292"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/base5dp"
            android:layout_marginRight="@dimen/base15dp"
            android:text="￥499"
            android:textColor="#929292"
            android:textSize="11sp" />
    </RelativeLayout>

</LinearLayout>