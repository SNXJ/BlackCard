<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base8dp">




    <TextView
        android:id="@+id/tv"
        style="@style/text_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_channel"

        android:gravity="center" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/base10dp"
        android:layout_height="@dimen/base10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base5dp"

        android:visibility="invisible" />

</RelativeLayout>