<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bj">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#0C0C0C">

        <ImageView
            android:id="@+id/sb_home_back"
            android:layout_marginLeft="15.45dp"
            android:layout_width="11dp"
            android:layout_height="18.6dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#929292"
            android:textSize="17sp"
            android:text="尚播"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <RadioButton
            android:id="@+id/sb_recommend_tv"
            android:layout_width="30.5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_underlin"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="推荐"
            android:layout_marginLeft="40dp"
            android:textColor="@color/sbtext"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/sb_nearby_tv"
            android:layout_width="30.5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_underlin"
            android:button="@null"
            android:gravity="center"
            android:text="附近"
            android:layout_centerHorizontal="true"
            android:textColor="@color/sbtext"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/sb_type_tv"
            android:layout_width="30.5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_underlin"
            android:button="@null"
            android:gravity="center"
            android:text="分类"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40.4dp"
            android:textColor="@color/sbtext"
            android:textSize="15sp"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/sb_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:background="#0B0B0B">

            <RadioButton
                android:id="@+id/radio_btn_sb2"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/sb_select"
                android:gravity="center"
                android:text="尚播"
                android:checked="true"
                android:drawablePadding="2dp"
                android:textSize="10sp"
                android:textColor="@color/hometext"/>

            <RadioButton
                android:id="@+id/live_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/live_btn"
                android:button="@null"/>

        <RadioButton
            android:id="@+id/radio_btn_sbmy"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/my_select"
            android:gravity="center"
            android:text="我的"
            android:textSize="10sp"
            android:drawablePadding="2dp"
            android:textColor="@color/hometext"/>
        </RadioGroup>
</LinearLayout>